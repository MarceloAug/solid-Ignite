                    }
                },
                "responses":{
                    "201":{
                        "description":"created"
                    },
                    "400":{
                        "description":"Error"
                    }
                }
            },

                "patch":{
                "tags":["users"],
                "summary":"Turn user Admin",
                "description":"Turn user Admin",
                 "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "user_id":{
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "user_id": "d065a6a0-04b3-4455-8aed-bb73fae757ac"
                                }
                            }
                        }
                    }
                },          
                "responses":{
                    "200":{
                        "description":"success",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "type":"object",
                                        "properties":{
                                            "name":{
                                                "type":"string"
                                            },
                                            "description":{
                                                "type":"string"
