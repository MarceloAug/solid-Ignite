            "post":{
                "tags":["Users"],
                "summary":"Create User",
                "description":"Create a new user",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "name":"usuario teste",
                                    "email":"marcelomab09@gmail.com"
                                }
                            }
